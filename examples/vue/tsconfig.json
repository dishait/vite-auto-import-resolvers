{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist"]
}
